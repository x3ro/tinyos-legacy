interface SignalStrength 
{
   /**
    * start continuous sampling of signal strength on the channel
    *
    * @return SUCCESS if the ADC is available
    */
   command result_t sampleStart();
   
   /**
    * event when the one sample is ready to be processed
    * @return SUCCESS if sampling will continue, FAIL to stop sampling
    */
   async event result_t sampleReady(uint16_t data);
}
