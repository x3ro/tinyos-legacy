ifndef DASA
DASA = /dev/ttyS0
endif

PROGRAM = dasa
PROGRAMMER_FLAGS = -dprog=dasa -dlpt=$(DASA) -dinvert=reset,miso,mosi,sck $(PROGRAMMER_PART) $(PROGRAMMER_EXTRA_FLAGS) -dt_sck=1

program: FORCE
	@echo "    installing $(PLATFORM) binary with inverted dasa"
	$(PROGRAMMER) $(PROGRAMMER_FLAGS) --erase --upload if=$(INSTALL_SREC)


