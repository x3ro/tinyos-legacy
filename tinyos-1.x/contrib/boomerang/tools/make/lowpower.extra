CFLAGS += -DCC2420_SYNC
CFLAGS += -DMOTEIV_LOWPOWER

# NETSYNC_DUTYCYCLE is floating point percentage.
LOWPOWER ?= 5
NETSYNC_DUTYCYCLE ?= $(LOWPOWER)
CFLAGS += -DNETSYNC_DUTYCYCLE=$(NETSYNC_DUTYCYCLE)

# NETSYNC_PERIOD_LOG2 is in ticks of a 32768 Hz clock (30us/tick).
# For instance NETSYNC_PERIOD_LOG2=16 means a 2 second period.
NETSYNC_PERIOD_LOG2 ?= 16
CFLAGS += -DNETSYNC_PERIOD_LOG2=$(NETSYNC_PERIOD_LOG2)

